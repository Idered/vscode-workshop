{
  // CSS LINT
  "css.lint.emptyRules": "ignore",

  // DEBUG
  "debug.toolBarLocation": "docked",

  // EDITOR
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "Hack, LigaHack, Fira Code, Source Code Pro, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.gotoLocation.multipleDeclarations": "goto",
  "editor.gotoLocation.multipleDefinitions": "goto",
  "editor.gotoLocation.multipleImplemenations": "goto",
  "editor.gotoLocation.multipleReferences": "goto",
  "editor.gotoLocation.multipleTypeDefinitions": "goto",
  "editor.lineHeight": 35,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.renderWhitespace": "none",
  "editor.rulers": [80, 120],
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.folding": false,
  "editor.suggest.showWords": false,

  // EXPLORER
  "explorer.autoReveal": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,

  // EMMET
  "emmet.triggerExpansionOnTab": true,

  // ESLINT
  "eslint.experimental.incrementalSync": true,

  // FILES
  "files.simpleDialog.enable": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/.rts2*": true,
    "**/.bundles": true,
    "**/.build": true,
    "**/cosmos-export": true,
    "**/.awcache": true
  },
  "files.associations": {
    "*.js": "javascriptreact",
    ".envrc": "dotenv"
  },

  // GIT
  "git.autofetch": true,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.views.repositories.location": "gitlens",
  "gitlens.views.fileHistory.location": "gitlens",
  "gitlens.views.lineHistory.location": "gitlens",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  "gitlens.mode.active": "review",

  // JAVASCRIPT
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBrackets": false,
  "javascript.preferences.quoteStyle": "single",
  "javascript.suggest.completeFunctionCalls": true,

  // SEARCH
  "search.location": "sidebar",
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.build": true
  },

  // TELEMETRY
  "telemetry.enableTelemetry": false,
  "telemetry.enableCrashReporter": false,

  // TERMINAL
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "block",
  "terminal.integrated.fontFamily": "FuraMono NF",
  "terminal.integrated.windowsEnableConpty": false,
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.experimentalRefreshOnResume": true,
  "terminal.integrated.experimentalUseTitleEvent": true,

  // TODO HIGHLIGHTS
  "todohighlight.exclude": [
    "**/node_modules/**",
    "**/bower_components/**",
    "**/dist/**",
    "**/build/**",
    "**/.vscode/**",
    "**/.github/**",
    "**/_output/**",
    "**/*.min.*",
    "**/*.map",
    "**/.next/**",
    "**/lib/esm/**",
    "**/lib/cjs/**"
  ],
  "todohighlight.keywords": [
    {
      "text": "TODO:",
      "backgroundColor": "#03A9F4"
    },
    {
      "text": "FIXME:",
      "backgroundColor": "#FF7043"
    }
  ],

  // PACKAGE MANAGER
  "npm.packageManager": "yarn",
  "eslint.packageManager": "yarn",
  "tslint.packageManager": "yarn",

  // TYPESCRIPT
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": false,

  // WINDOW
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "window.titleBarStyle": "custom",
  "window.restoreFullscreen": true,
  "window.menuBarVisibility": "toggle",

  // WORKBENCH
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {},
  "workbench.colorTheme": "Ayu Mirage Bordered",
  "workbench.editor.showTabs": false,
  "workbench.settings.editor": "json",
  "workbench.startupEditor": "none",
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.statusBar.visible": true,
  "workbench.enableExperiments": true,
  "workbench.sideBar.location": "right",

  // ZEN MODE
  "zenMode.hideStatusBar": true,
  "zenMode.hideTabs": true,

  "macros": {
    "stageAndCommit": ["git.stageAll", "git.commit"]
  }
}
